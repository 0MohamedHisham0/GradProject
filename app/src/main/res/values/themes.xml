<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GradProject" parent="Theme.MaterialComponents.Light.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_main</item>
        <item name="colorPrimaryDark">@color/orange_main</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/orange_main</item>
        <item name="textInputStyle">@style/TextInputLayoutStyle</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#121212</item>
        <item name="colorOnSecondary">#ffff</item>

    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="background">@color/white</item>
        <item name="errorEnabled">true</item>
        <item name="hintTextColor">@color/secondary</item>
    </style>

    <style name="Theme.GradProject.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.GradProject.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.GradProject.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>