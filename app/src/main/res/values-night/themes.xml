<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GradProject" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_main</item>
        <item name="colorPrimaryDark">@color/orange_main</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/orange_main</item>
        <item name="textInputStyle">@style/TextInputLayoutStyle</item> //  add it here
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorOnSecondary">#727272</item>
        <item name="colorOnPrimary">#121212</item>


    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxBackgroundColor">?attr/colorOnSecondary</item>
        <item name="boxStrokeColor">@color/orange_main</item>
        <item name="counterTextAppearance">@color/orange_main</item>
        <item name="errorEnabled">true</item>
        <item name="hintTextColor">@color/secondary</item>
    </style>

</resources>